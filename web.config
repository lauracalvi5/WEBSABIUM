<?xml version="1.0" encoding="utf-8"?>
<!--
  Archivo de configuración de IIS para el sitio Sabium.
  Copia este archivo junto al resto de los .asp en el servidor.
  Ajusta los valores según tu entorno (por ejemplo, activa debug en
  entornos de prueba o modifica los documentos predeterminados si fuese
  necesario).
-->
<configuration>
  <appSettings>
    <!-- Indica el entorno actual; puede usarse para condicionar lógica -->
    <add key="Sabium:Environment" value="Production" />
  </appSettings>

  <system.web>
    <!-- Mantener debug desactivado en producción -->
    <compilation debug="false" />
    <customErrors mode="RemoteOnly" />
    <sessionState mode="InProc" timeout="20" />
  </system.web>

  <system.webServer>
    <!-- Define index.asp como documento predeterminado -->
    <defaultDocument enabled="true">
      <files>
        <clear />
        <add value="index.asp" />
        <add value="default.asp" />
      </files>
    </defaultDocument>

    <!-- Ajustes útiles para aplicaciones Classic ASP -->
    <asp enableParentPaths="false"
         scriptErrorSentToBrowser="false">
      <session allowSessionState="true" />
      <limits scriptTimeout="120" />
    </asp>

    <!-- Muestra errores detallados sólo desde localhost -->
    <httpErrors errorMode="DetailedLocalOnly" />

    <!-- Habilita compresión estática y dinámica si está disponible -->
    <urlCompression doStaticCompression="true"
                    doDynamicCompression="true" />

    <!-- Permite archivos estáticos comunes no registrados por defecto -->
    <staticContent>
      <mimeMap fileExtension=".webp" mimeType="image/webp" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
    </staticContent>
  </system.webServer>
</configuration>